<div class="position-relative show-banner d-flex align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path @list.photo.key, crop: :fill %>')">
  <p class="movies-alert fw-bold btn btn-warning text-white justify-content-end"><%= pluralize(@list.bookmarks.count, 'movie') %></p>
  <h1 class="text-center  fw-bold"><%= @list.name %></h1>
</div>


<div class="container">
  <%= link_to "Add movie", new_list_bookmark_path(@list), class: " my-3 btn btn-success text-white fw-bold" %>
  <div class="d-flex-wrap row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-2" style="width: 30rem;">
        <img src="<%= bookmark.movie.poster_url%>" class="card-img-top movie-poster px-n1" alt="movie poster">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="text-secondary fs-6"><%= bookmark.movie.overview %></p>
          <div class="d-flex card-body">
            <i class="fa-solid fa-quote-left mx-2"></i>
            <p class="flex-grow-1"><%= bookmark.comment %> </p>
            <%= link_to "delete", bookmark_path(bookmark), class: "link-underline link-underline-opacity-0 text-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
